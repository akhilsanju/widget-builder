[
    {
    "type": "hidden",
    "settings": [
      {
        "type": "graphQl",
        "id": "graphQueries",
        "typeMeta": {
          "mappings": {
            "productId": {
              "reads": "products.*.productId",
              "type": "Int!"
            }
          }
        }
      }
    ]
