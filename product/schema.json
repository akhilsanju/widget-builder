          {
            "type": "color",
            "id": "tab-text-color",
            "label": "Tab Text Color",
            "default": "#000000"
          },
          {
            "type": "color",
            "id": "active-tab-text-color",
            "label": "Active Tab Text Color",
            "default": "red"
          },
          {
            "type": "number",
            "id": "tab_font_size_desktop",
            "label": "Font Size (Desktop)",
            "default": {
              "value": 15,
              "type": "px"
            }
          },
          {
            "type": "number",
            "id": "tab_font_size_tablet",
            "label": "Font Size (Tablet)",
            "default": {
              "value": 15,
              "type": "px"
            }
          },
          {
            "type": "number",
            "id": "tab_font_size_mobile",
            "label": "Font Size (Mobile)",
            "default": {
              "value": 12,
              "type": "px"
            }
          }
        ]
      }

    ]
  },
  {
